<?xml version="1.0" encoding="UTF-8"?>
<!-- rebuild: glib-compile-schemas schemas/ -->
<schemalist>
    <schema id="org.gnome.shell.extensions.jiggle" path="/org/gnome/shell/extensions/jiggle/">
        <!-- See also: https://developer.gnome.org/glib/stable/gvariant-format-strings.html -->
        <!-- Which effect to use -->
        <key name="effect" type="i">
            <default>0</default>
        </key>

        <!-- Cursor Scaling mode settings -->
        <!-- Hide original cursor -->
        <key name="hide-original" type="b">
            <default>true</default>
        </key>
        <!-- Use system icon when true, or use image in icons/ when false -->
        <key name="use-system" type="b">
            <default>false</default>
        </key>
        <!-- How fast does the cursor grow -->
        <key name="growth-speed" type="d">
            <default>0.35</default>
        </key>
        <!-- How fast does the cursor grow -->
        <key name="shrink-speed" type="d">
            <default>0.25</default>
        </key>
        <!-- How much does the pointer need to move -->
        <key name="shake-threshold" type="i">
            <default>180</default>
        </key>

        <!-- Fireworks settings -->
        <key name="fireworks-burst-speed" type="d">
            <default>0.5</default>
        </key>
        <key name="fireworks-spark-count" type="i">
            <default>50</default>
        </key>
        <key name="fireworks-spark-trail" type="i">
            <default>10</default>
        </key>

        <!-- Spotlight settings -->
        <key name="spotlight-size" type="i">
            <default>180</default>
        </key>
        <key name="spotlight-show-speed" type="d">
            <default>0.4</default>
        </key>
        <key name="spotlight-hide-speed" type="d">
            <default>0.25</default>
        </key>
    </schema>
</schemalist>
